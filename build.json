            "src/objects/audio/AudioListener.cpp",
            "src/objects/audio/AudioEffectProperties.cpp",
            "src/objects/audio/AudioEffectSlot.cpp",
            "src/objects/audio/AudioDevice.cpp",
            "src/objects/audio/AudioSystem.cpp",

